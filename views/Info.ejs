<script>
        $(document).ready(function () {
            $(window).scroll(function () {
                if ($(document).scrollTop() > 50) {
                    $('nav').addClass('shrink');
                }
                else {
                    $('nav').removeClass('shrink');
                }
            });

            if($(".btn-top").length > 0){
                $(window).scroll(function () {
                    var e = $(window).scrollTop();
                    if (e > 50) {
                        $(".btn-top").show()
                    } else {
                        $(".btn-top").hide()
                    }
                });
                $(".btn-top").click(function () {
                    $('body,html').animate({
                        scrollTop: 0
                    })
                })
	        }		          
        });
    </script>